<!DOCTYPE html>
<html lang="en">
{{> header}}
<body>
  {{> navbar}}
  <div class="jumbotron text-center">
    <h1>Chart</h1>
    <p>Chart of data readings</p>
  </div>

  <div class="row container-fluid">
    <div class="col-md-12">
      <canvas id="myChart" width="400" height="200"></canvas>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
      <script>
      //------------- chart.js ------------------
      //var a=2,b=4,c=20,d=16,e=12,f=4,g=13;
      var lightArray =[3,5,4,5,7,9,2];
      var arrayIndex = 0;

      var ctx = document.getElementById('myChart').getContext('2d');
      var chart = new Chart(ctx, {
          // The type of chart we want to create
          type: 'line',

          // The data for our dataset
          data: {
              labels: ["January", "February", "March", "April", "May", "June", "July"],
              datasets: [{
                  label: "Light Data",
                  //backgroundColor: 'rgb(255, 99, 132)',
                  borderColor: 'rgb(255, 99, 132)',
                  data: lightArray,
              }]
          },

          // Configuration options go here
          options: {}
        });

        //------------ ajax -----------
        $(document).ready(function(){
          // var $light = $('#light');
          const AUTH = 'd71ef867ed0f4a4b821d1f6d42b2abf9';
          const reqUrl = `http://blynk-cloud.com/${AUTH}/get/V5`;

          setInterval(function(){
            $.ajax({
              type: 'GET',
              url: reqUrl,
              success: function(result){
                //console.log(result);
                //$light.html(result);
                //lightArray.push(parseInt(result));
                lightArray[arrayIndex++] = parseInt(result);
                if(arrayIndex>lightArray.length) {
                  arrayIndex = 0;
                  chart.clear();
                }

                chart.update();
              },
              error: function(){
                console.log('Error in getting light');
              },
            });
          }, 2000);

        });

      </script>
    </div>
  </div>
</body>
</html>
